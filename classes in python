#Create a class Person with attributes name, age, and city.¶
class person:#class
    def __init__(self,name,age,city):#construction
      self.name=name
      self.age=age
      self.city=city
    def person(self):
        print(f"{self.name}learn!")

person_one = person("noorulain", 19 ,"raiwind")
print(person_one.name)
person_one.person()
#Create a class Car with attributes make, model, and year.¶
class car:#object
    def __init__(self,make,model,year):#construction
     self.make=make
     self.model=model
     self.year=year
    def car(self):
       print(f"{self.make}calus!")

car1=car("BMW","pro",2020)
print(car1.make)
car1.car()
#Create a class Circle with attributes radius and methods to calculate area and circumference.
class circle:
    def __init__(self,radius,area,circumference):
        self.radius=radius
        self.area=area
        self.circumference=circumference
    def area(self):
        return 3.14 *r**2
    def circumference(self):    
        return 2*3.14*r
n=float(input("enter radiuse of the circle:"))
n1=3.14*n**2
n2=2*3.14*n
circle1=circle(n,n1,n2)
print("the area of circle is:",circle1.area)
print("the circumference of circle is:", circle1.circumference)
#Create a class Rectangle with attributes length and width and methods to calculate area and perimeter.
class rectangle:
    def __init__(self, length,width):
        self.length=length
        self.width=width
    def area(self):
        return length*width
    def perimeter(self):
        return 2*length+2*width
l=float(input("enter length of a rectangle"))
w=float(input("enter width of a rectangular"))
area=l*w
perimeter=2*l+2*w
rectangle1=rectangle(l,w)
print("the area of rectangle is:",area)
print("the perimeter of rectangle is:",perimeter)
