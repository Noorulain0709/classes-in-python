class book:
    def __init__(self,title,author,published_year):
        self.title=title
        self.author=author
        self.published_year=published_year
my_book=book("namal","nimra",2019)    
print("title of book is:",my_book.title)
print("author of book is:",my_book.author)
print("publish year:",my_book.published_year)
#7. Create a class Employee with attributes name, salary, and designation.
class employee:
    def __init__(self,name, salary,designation):
        self.name=name
        self.salary=salary
        self.designation=designation
classic_employee=employee("hania",18270,"manager")        
print("name of employee:",classic_employee.name)
print("salary:",classic_employee.salary)
print("deignation of employee",classic_employee.designation)
# Create a class Bank with attributes name, account_number, and balance. Implement methods to deposit and withdraw money.
total=12
class bank:
    def __init__(self,name, account_number,balance):
        self.name=name
        self.account_number=account_number
        self.balance=balance
    def deposit_or__withdrew(self):
        if self.balance>total:
            print("deposited")
        else :
            self.balance<total
            print("not deposited")
a=bank('noor',45566,20)
a.deposit_or__withdrew()
